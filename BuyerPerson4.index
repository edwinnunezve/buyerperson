    <!-- Modal Structure -->
    <div id="audience-modal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <button class="modal-close" id="modal-close-btn">×</button>
                <h2 id="modal-title"></h2>
                <p id="modal-archetype" class="archetype"></p>
            </div>
            
            <div class="modal-body">
                <section class="modal-section human-side">
                    <h4>El Lado Humano</h4>
                    <div class="human-item"><span class="human-item-icon">🎯</span><div class="human-item-text"><strong>Meta Principal</strong><p id="modal-meta"></p></div></div>
                    <div class="human-item"><span class="human-item-icon">🔥</span><div class="human-item-text"><strong>Dolor / Frustración</strong><p id="modal-pain"></p></div></div>
                    <div class="human-item"><span class="human-item-icon">💡</span><div class="human-item-text"><strong>Intereses y Canales Clave</strong><p id="modal-interests"></p></div></div>
                </section>
                
                <section class="modal-section strategy-guide">
                    <h4>Nuestra Estrategia de Tono y Acción</h4>
                    <div class="strategy-item">
                        <h5>🎤 Tono de Voz Sugerido</h5>
                        <p id="modal-tono"></p>
                    </div>
                    <div class="strategy-item">
                        <h5>🚀 Ideas de Activación Convocante</h5>
                        <ul id="modal-activacion"></ul>
                    </div>
                </section>
                
                <section class="modal-section tactical-guide">
                    <h4>Guía Táctica de Comunicación</h4>
                    <div class="tactical-details-grid">
                        <div class="detail-item"><h5>Rol Propietario</h5><p id="modal-rol"></p></div>
                        <div class="detail-item"><h5>Área Emisora</h5><p id="modal-area"></p></div>
                        <div class="detail-item full-width"><h5>Tipo de Mensaje</h5><p id="modal-mensaje"></p></div>
                        <div class="detail-item full-width"><h5>Frecuencia Máxima</h5><p id="modal-frecuencia"></p></div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.audience-card');
            const modal = document.getElementById('audience-modal');
            const modalCloseBtn = document.getElementById('modal-close-btn');

            if (!modal) return;

            cards.forEach(card => {
                card.addEventListener('click', () => {
                    const data = card.dataset;
                    
                    document.getElementById('modal-title').textContent = data.title;
                    document.getElementById('modal-archetype').textContent = data.archetype;
                    
                    document.getElementById('modal-meta').textContent = data.meta;
                    document.getElementById('modal-pain').textContent = data.pain;
                    document.getElementById('modal-interests').textContent = data.interests;

                    document.getElementById('modal-tono').textContent = data.tono;
                    document.getElementById('modal-activacion').innerHTML = data.activacion;

                    document.getElementById('modal-rol').textContent = data.rol;
                    document.getElementById('modal-mensaje').textContent = data.mensaje;
                    document.getElementById('modal-area').textContent = data.area;
                    document.getElementById('modal-frecuencia').textContent = data.frecuencia;

                    modal.classList.add('active');
                });
            });

            const closeModal = () => {
                modal.classList.remove('active');
            }

            modalCloseBtn.addEventListener('click', closeModal);
            modal.addEventListener('click', (event) => { if (event.target === modal) closeModal(); });
            document.addEventListener('keydown', (event) => { if (event.key === 'Escape' && modal.classList.contains('active')) closeModal(); });
        
            const summaryTableBody = document.querySelector('#summary-table tbody');

            if (summaryTableBody) {
                cards.forEach(card => {
                    const data = card.dataset;
                    const row = document.createElement('tr');

                    row.innerHTML = `
                        <td>${data.title}</td>
                        <td>${data.archetype}</td>
                        <td>${data.meta}</td>
                        <td>${data.pain}</td>
                        <td>${data.interests}</td>
                        <td>${data.area}</td>
                    `;
                    summaryTableBody.appendChild(row);
                });
            }
        });
    </script>
